name: KontraMobile
options:
  bundleIdPrefix: com.kontra
  deploymentTarget:
    iOS: 16.0
configs:
  Debug: debug
  Release: release
settings:
  base:
    SWIFT_VERSION: 5.9
    PRODUCT_NAME: KontraMobile
    IPHONEOS_DEPLOYMENT_TARGET: 16.0
    CURRENT_PROJECT_VERSION: 1
    MARKETING_VERSION: 1.0
    ASSETCATALOG_COMPILER_APPICON_NAME: AppIcon

targets:
  KontraMobile:
    type: application
    platform: iOS
    sources:
      - path: KontraMobile
    settings:
      base:
        INFOPLIST_FILE: KontraMobile/Resources/Info.plist
        PRODUCT_BUNDLE_IDENTIFIER: com.kontra.mobile
        SWIFT_EMIT_LOC_STRINGS: YES
    scheme:
      testTargets:
        - KontraMobileTests
  KontraMobileTests:
    type: bundle.unit-test
    platform: iOS
    sources:
      - path: KontraMobileTests
    dependencies:
      - target: KontraMobile
